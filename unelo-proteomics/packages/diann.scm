(define-module (unelo-proteomics packages maths)
  #:use-module (guix gexp)
  #:use-module (guix packages)
  #:use-module (guix download)
  #:use-module (guix git-download)
  #:use-module (guix utils)
  #:use-module (guix build-system gnu)
  #:use-module (gnu packages gcc)
  #:use-module (gnu packages maths)
  #:use-module (gnu packages pkg-config)
  #:use-module ((guix licenses)
                #:prefix license:))

;; this bundles eigen, mstoolkit and minidnn
;; later versions are propriatary 
(define-public diann
  (package
    (name "diann")
    (version "1.8")
    (home-page "https://github.com/vdemichev/diann")
    (source
     (origin
       (method git-fetch)
       (url home-page)
       (file-name (git-file-name name version))
       (sha256 (base32 "1pxf211i742ibjvmysnxad583vcjlc73035y3viiq1i7l6i4ajsc"))
       (snippet
        #~(begin
            (use-modules (guix build utils))
            (for-each delete-file
                      (append
                       (find-files "." "vcxproj")
		       (find-files "." "vdproj")
		       (find-files "." "AssemblyAttributes")
		       (find-files "." "\\.idb$")
		       )
                        ;; Generated by bison.

       (commit version)
       (patches (search-patches
		 "unelo-proteomics/patches/diann-goto-fixes.patch"))))
    (build-system gnu-build-system)
    (arguments
     (list
      #:tests? #f ;; no tests exist
      #:make-flags #~(list (string-append "CC=" #$(cc-for-target)))
      #:phases
       #~(modify-phases %standard-phases
	 (delete 'configure)
	 (add-before 'build 'cd-to-mstoolkit
	   ;; 
	   (lambda _
	     (chdir "mstoolkit")))
	 (add-after 'build 'cd-back
	   (lambda _
	     (chdir "..")))
	 
	 (replace 'install
	   (lambda _
	     (install-file "diann-linux" $(string-append $#output "/bin/")))))))
    (license license:cc-by4.0))))))
